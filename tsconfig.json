{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "src",
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./__mocks__/*.ts",
    "./*.ts",
    "./*.tsx",
    "./plugins/**/*",
    "eslint.config.mjs"
  ]
}
